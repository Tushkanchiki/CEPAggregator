@model InputModel

@using CEPAggregator.Enums

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="text-center">
    <h1 class="display-4">Выберите валюту и количество</h1>

    <form method="post">
        <div>
            <label asp-for="Currency">Выберите валюту</label>
            <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyType>()">
            </select>
        </div>
        <div>
            <label asp-for="Count">Выберите количество покупаемой валюты</label>
            <input type="number" asp-for="Count" />
            <span asp-validation-for="Count"></span>
        </div>
        <div>
            <label asp-for="UseCurrency">Учитывать курс</label>
            <input type="checkbox" asp-for="UseCurrency" />
        </div>
        <div>
            <label asp-for="UseLocation">Учитывать местоположение</label>
            <input type="checkbox" asp-for="UseLocation" />
        </div>
        <div>
            <label asp-for="UseRating">Учитывать рейтинг</label>
            <input type="checkbox" asp-for="UseRating" />
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>
